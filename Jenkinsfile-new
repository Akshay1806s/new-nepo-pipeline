pipeline {
    // add your slave label name
    agent { label 'slave'}
    tools{
        maven 'maven'
    }
    stages {
        stage ('Checkout SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Build') {

            steps {
               sh 'mvn package'
            }
        }
        
        stage ('deploy') {

            steps {
   sshagent(['tomcatserver']) {
   sh "scp -o StrictHostKeyChecking target/maven-web-application.war ec2-user@13.239.5.14:/opt/tomcat9/webapps/ "
                         echo "deploy sucessfull"
}
  
            }
        }

        
    }
}
