pipeline {
    // add your slave label name
    agent { label 'slave'}
    tools{
        maven 'maven'
    }
    stages {
        stage ('Checkout SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Build') {

            steps {
               sh 'mvn package'
            }
        }
        
        stage ('deploy') {

            steps {
    // some block
    sh "scp -o akshay/target/maven-web-application.war ec2-user@3.26.1.25:/opt/tomcat9/webapps/ "
                         
            }
        }

        
    }
}
