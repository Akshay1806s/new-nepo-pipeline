pipeline {
    // add your slave label name
    agent { label 'slave'}
    tools{
        maven 'maven'
    }
    stages {
        stage ('Checkout SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Build') {

            steps {
               sh 'mvn clean package'
            }
        }
        
        stage ('deploy') {

            steps {
              
		    echo "Build is sucessfull"         
            
        }

        
    }
}
